{% extends 'base.html.twig' %}

{% block title %}Hello AnnoncesController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    <h1>Annonce Seule {{ annonce.id }}</h1>

    <div class="row">
        <div class="card col-md-12" style="height: 30%; margin-top: 2%;">
            <div class="card-header">
                TITRE: {{ annonce.titre }}
            </div>

            <img src="{{ annonce.photo }}" style="height: 45%; max-width: 80%; padding-left: 20%; padding-top: 2%;">
            <div class="card-body">
                <h2>Prix: {{ annonce.prix}}</h2>
                <p><b>Description:</b><br>{{ annonce.description }}</p>
                <a href="#" class="btn btn-primary">Plus d'Info</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
