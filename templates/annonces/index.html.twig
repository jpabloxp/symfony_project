{% extends 'base.html.twig' %}

{% block title %}Hello AnnoncesController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    <h1>Les Annonces</h1>

    <div class="row">
        {% for annonce in annonces %}
            
            <div class="card col-md-12">
                <div class="card-header">
                    Annonce {{ annonce.id }}: {{ annonce.titre }}
                </div>

                <img src="{{ annonce.photo }}" style="height: 200px; max-width: 70%; padding-left: 30%;">
                <div class="card-body">
                    <h2>Prix: {{ annonce.prix}}</h2>
                    <p><b>Description:</b><br>{{ annonce.description }}</p>
                    <a href="http://localhost:8000/annonce/{{ annonce.id }}" class="btn btn-primary">Plus d'Info</a>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
